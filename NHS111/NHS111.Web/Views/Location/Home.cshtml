@using NHS111.Models.Models.Web
@{
    Layout = "~/Views/Shared/_LayoutNhsUK.cshtml";
}
@inherits NHS111.Web.Views.Shared.DirectLinkingView<JourneyViewModel>
@section Title {NHS 111 Online}

@{ ViewBag.Description = "Answer questions about your main symptom on 111.nhs.uk and get NHS medical help near you."; }
@section HeadTop {
    <script>
        dataLayer = [
            {
                'virtualPageUrl': 'Home',
                'virtualPageTitle': 'Home'
            }];
    </script>
}

<h1 class="heading--large">Get medical help near you</h1>
<ol>
    <li>Answer questions about your main symptom.</li>
    <li>Find out when and where to get help.</li>
    <li>Get a call back from a nurse, if you need one.</li>
</ol>

<div class="callout callout--info measure">
    <p>General information about <a href="https://www.nhs.uk/conditions/">health problems</a>, <a href="https://www.nhs.uk/medicines/">medicines</a> and how to get an <a href="https://www.nhs.uk/live-well/healthy-body/out-of-hours-medicines/">emergency prescription</a> is on <a href="https://www.nhs.uk">NHS.UK</a>.</p>
</div>

@using (Html.BeginForm("Location", "Location", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(m => m.CurrentPostcode, "Postcode")
    @Html.ValidationMessageFor(m => m.CurrentPostcode, "Please enter your current postcode")
    @Html.TextBoxFor(m => m.CurrentPostcode, new { @required = true, style = "width: 8em; display: inline-block; margin-right: 10px;" })
    <button class="js-find-location button--link" type="button" style="display: none">Use my current location</button>

    @Html.HiddenFor(m => m.SessionId)
    @Html.HiddenFor(m => m.Campaign)
    @Html.HiddenFor(m => m.FilterServices)
    @Html.HiddenFor(m => m.PathwayNo)
</div>

    <button type="submit" class="button">Next</button>
}

<hr />

<p class="measure">Always follow any medical advice you’ve already been given by your doctor. See our @(Html.ActionLink("terms", "Terms", "Help", null, new { target = "_blank" })).</p>