@{
    Layout = "~/Views/Shared/_LayoutNhsUK.cshtml";
}
@section Title {NHS 111 Online - Babylon}

@section HeadTop {
    <script>
        dataLayer = [
            {
                'virtualPageUrl': 'Babylon',
                'virtualPageTitle': 'Babylon'
            }
        ];
    </script>
}
<div class="measure">

    <div class="content-block">

        <h1 class="heading--large">Get help from 111 online</h1>
        <p>Download a free app, answer questions about your symptoms and find out what to do next.</p>
        <p>This service is for people aged 17 and over.</p>
        <p>If you don’t want to use the app now, call 111 for health advice.</p>

        <div class="callout callout--info">
            <div class="app-panel clearfix">
                <img class="app-panel__thumbnail" src="/content/images/app-panel/nhs_111_app_icon.png" />
                <div class="app-panel__details">
                    <h2>NHS 111 London</h2>
                    <ul class="app-panel__description">
                        <li>Babylon Health</li>
                        <li>Cost: Free</li>
                    </ul>
                    <a class="app-store" title="Google Play Store" href="https://play.google.com/store/apps/details?id=com.babylon.nhs"><img alt="Get it on Google Play" src="/content/images/app-panel/google_play_badge.png" height="48" /></a>
                    <a class="app-store" title="Apple App Store" href="https://itunes.apple.com/gb/app/nhs-111/id1196229018?mt=8"><img alt="Download on the iOS App Store" src="/content/images/app-panel/app_store_badge_US-UK_135x40.svg" height="48" /></a>
                </div>
            </div>
        </div>



    </div>

</div>