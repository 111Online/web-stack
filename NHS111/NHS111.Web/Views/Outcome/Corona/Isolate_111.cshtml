@using NHS111.Models.Models.Web
@inherits NHS111.Web.Views.Shared.SurveyLinkView<OutcomeViewModel>
@{
    Layout = "~/Views/Shared/_LayoutNhsUk.cshtml";
}

@section Title {
    NHS 111 - Isolate yourself and stay indoors then call 111
}

@section HeadTop {
    @{ var url = string.Format("/outcome/{0}/{1}/{2}/disposition/", Url.Encode(Model.PathwayNo), Url.Encode(Model.OutcomeGroup.Text), Url.Encode(Model.Id)); }
    <script>
        var pageId = '@Model.Id';
        dataLayer = [
        {
            'virtualPageUrl': '@url',
            'virtualPageTitle': '@Model.TitleWithoutBullets'
        }];
    </script>
}


@Html.HiddenFor(x => Model.Id)


<div class="measure nhsuk-core">
  <h1 class="nhsuk-heading-xl">Call NHS 111 to speak to a nurse</h1>

  <div class="callout callout--warning callout--lite nhsuk-u-margin-bottom-6">
    <p>
      The phone service will be very busy, but you <b>must</b> wait until you can speak
      to someone.
    </p>
  </div>

  <p>
    Tell 111 that you are calling about coronavirus. You must tell them where
    you have travelled and about any contact you have had with someone with
    symptoms.
  </p>

  <p>
    111 will arrange a test for you if you need one.
  </p>

  <div class="callout callout--info nhsuk-u-margin-bottom-6 nhsuk-u-margin-top-6">
    <p>
      You should keep yourself separate from others in your household (self-isolate)
      until you have spoken to 111.
      <a href="https://www.nhs.uk/conditions/coronavirus-covid-19/self-isolation-advice/">
        Read more details about self-isolation.
      </a>
    </p>
  </div>

  <div class="callout callout--attention nhsuk-u-margin-bottom-6">
    <p>
      To protect yourself and others, <b>do not go</b> to a GP, pharmacy or hospital
    </p>
  </div>

</div>
