@using NHS111.Models.Models.Web
@inherits NHS111.Web.Views.Shared.SurveyLinkView<OutcomeViewModel>
@{
    Layout = "~/Views/Shared/_LayoutNhsUk.cshtml";
}

@section Title {
    NHS 111 - Isolate yourself and stay indoors then call 111
}

@section HeadTop {
    @{ var url = string.Format("/outcome/{0}/{1}/{2}/disposition/", Url.Encode(Model.PathwayNo), Url.Encode(Model.OutcomeGroup.Text), Url.Encode(Model.Id)); }
    <script>
        var pageId = '@Model.Id';
        dataLayer = [
        {
            'virtualPageUrl': '@url',
            'virtualPageTitle': '@Model.TitleWithoutBullets'
        }];
    </script>
}


@Html.HiddenFor(x => Model.Id)


<div class="measure nhsuk-core">
  <h1 class="nhsuk-heading-xl">Call NHS 111 and speak to a nurse</h1>
  <div class="callout callout--warning callout--lite nhsuk-u-margin-bottom-6">
    <p>
        The phone will be very busy but you need to wait to speak to someone. 
    </p>
  </div>

  <p>
      111 online is updating its clinical assessment, so you must wait to speak to a nurse who will ask you more questions about your symptoms. 
  </p>

  <p>
      Tell 111 that you are calling about coronavirus symptoms.
  </p>

  <div class="callout callout--info nhsuk-u-margin-bottom-6 nhsuk-u-margin-top-6">
    <p>You need to stay away from other people until you have spoken to 111. 
      
    </p>
      <p><a href="https://www.nhs.uk/conditions/coronavirus-covid-19/self-isolation-advice/">
          Read more stay at home advice on NHS.UK.
      </a></p>
  </div>

  <div class="callout callout--attention nhsuk-u-margin-bottom-6">
    <p>
      To protect others, <b>do not go</b> to a GP, pharmacy or hospital
    </p>
  </div>

</div>
