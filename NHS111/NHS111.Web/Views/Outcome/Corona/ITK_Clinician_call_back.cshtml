@using NHS111.Models.Models.Web
@inherits NHS111.Web.Views.Shared.SurveyLinkView<OutcomeViewModel>

@{
    Layout = "~/Views/Shared/_LayoutNhsUk.cshtml";
}

@section Title {
    NHS 111 - You need to isolate yourself and await 111 clinical callback
}

@{ var url = string.Format("/outcome/{0}/{1}/{2}/disposition/", Url.Encode(Model.PathwayNo), Url.Encode(Model.OutcomeGroup.Text), Url.Encode(Model.Id)); }
<script>
    var pageId = '@Model.Id';

    dataLayer = [
        {
            'virtualPageUrl': '@url',
            'virtualPageTitle': '@Model.TitleWithoutBullets'
        }];
</script>


@Html.HiddenFor(x => Model.Id)

<div class="measure nhsuk-core">
    <h1 class="nhsuk-heading-xl">Isolate and await Clinical Callback</h1>
    <p>
        Dummy text for clinical callback....
    </p>
    <p>Arrange a clinical callback</p>
    <p>
        @using (Html.BeginForm("PersonalDetails", "PersonalDetails", FormMethod.Post))
        {
            @Html.Partial("_CommonHiddenFieldsOutcomeViewModel", Model)
            <button type="submit" name="PersonalDetails" value="Book a test">Start</button>
        }
    </p>
</div>