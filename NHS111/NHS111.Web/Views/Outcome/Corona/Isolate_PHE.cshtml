@using NHS111.Models.Models.Web
@inherits NHS111.Web.Views.Shared.SurveyLinkView<OutcomeViewModel>
@{
    Layout = "~/Views/Shared/_LayoutNhsUk.cshtml";
}

@section Title {
    NHS 111 - You need to isolate yourself and stay indoors
}

@section HeadTop {
    @{ var url = string.Format("/outcome/{0}/{1}/{2}/disposition/", Url.Encode(Model.PathwayNo), Url.Encode(Model.OutcomeGroup.Text), Url.Encode(Model.Id)); }
    <script>
        var pageId = '@Model.Id';
        dataLayer = [
        {
            'virtualPageUrl': '@url',
            'virtualPageTitle': '@Model.TitleWithoutBullets'
        }];
    </script>
}

// removed survey
// removed feedback

@Html.HiddenFor(x => Model.Id)

<div class="measure nhsuk-core">

  <h1 class="nhsuk-heading-l">
    You need to isolate yourself and stay indoors
  </h1>

  <p>
    For 14 days you should:
  </p>
  <ul>
    <li>
      stay at home
    </li>
    <li>
      not go to work, school or public areas
    </li>
    <li>
      not use public transport or taxis
    </li>
    <li>
      ask friends, family members or delivery services to carry out errands for you
    </li>
    <li>
      try to avoid visitors to your home - it’s OK for friends, family or delivery
      drivers to drop off food
    </li>
  </ul>
  <p>
    While the risk to people in the UK is low, following these steps can help
    reduce the possible spread of infection.
  </p>

  <h2 class="nhsuk-heading-m">
    Call 111 if you start to develop symptoms of:
  </h2>

  <ul>
    <li>
      shortness of breath
    </li>
    <li>
      high temperature (feeling hot to touch on chest or tummy)
    </li>
    <li>
      cough
    </li>
  </ul>

  <p>
    Make sure you select the option to speak to someone. Tell them you are calling
    about possible coronavirus (COVID-19) symptoms.
  </p>

</div>
