@using NHS111.Models.Models.Web
@inherits NHS111.Web.Views.Shared.SurveyLinkView<OutcomeViewModel>
@{
    Layout = "~/Views/Shared/_LayoutNhsUk.cshtml";
}

@section Title {
    NHS 111 - General information about coronavirus (COVID-19)
}

@section HeadTop {
    @{ var url = string.Format("/outcome/{0}/{1}/{2}/disposition/", Url.Encode(Model.PathwayNo), Url.Encode(Model.OutcomeGroup.Text), Url.Encode(Model.Id)); }
    <script>
        var pageId = '@Model.Id';
        dataLayer = [
        {
            'virtualPageUrl': '@url',
            'virtualPageTitle': '@Model.TitleWithoutBullets'
        }];
    </script>
}


@Html.HiddenFor(x => Model.Id)

<div class="measure nhsuk-core">

  <h1 class="nhsuk-heading-l">
    Read general information about coronavirus (COVID-19)
  </h1>

  <p>As you:</p>
  <ul>
    <li>have <strong>not</strong> travelled to a country with a serious outbreak</li>
    <li>are <strong>not</strong> showing any symptoms</li>
    <li>have <strong>not</strong> been in contact with a confirmed case</li>
  </ul>

  <p>You don’t need to speak to anybody right now.</p>

  <p>
    You can <a data-event-trigger="click" data-event-value="Novel Coronavirus" href="https://www.nhs.uk/conditions/coronavirus-covid-19/">read advice</a> and <a data-event-trigger="click" data-event-value="Novel Coronavirus common questions" href="https://www.nhs.uk/conditions/coronavirus-covid-19/faqs-and-myths/">find answers to common questions</a> about coronavirus on NHS.UK.
  </p>

</div>
