@using AutoMapper
@using NHS111.Models.Models.Web
@using NHS111.Models.Models.Web.Elements
@using NHS111.Web.Helpers
@inherits NHS111.Web.Views.Shared.SurveyLinkView<OutcomeViewModel>
@{
    Layout = "~/Views/Shared/_LayoutNhsUk.cshtml";
}

@section Title {
    NHS 111 - You need to isolate yourself and stay indoors
}

@section HeadTop {
    @{ var url = string.Format("/outcome/{0}/{1}/{2}/disposition/", Url.Encode(Model.PathwayNo), Url.Encode(Model.OutcomeGroup.Text), Url.Encode(Model.Id)); }
    <script>
        var pageId = '@Model.Id';
        dataLayer = [
        {
            'virtualPageUrl': '@url',
            'virtualPageTitle': '@Model.TitleWithoutBullets'
        }];
    </script>
}

@{
    var searchJourneyViewModel = Mapper.Map<SearchJourneyViewModel>((JourneyViewModel)Model);
    var encryptedQueryStringValues = KeyValueEncryptor.EncryptedKeys(searchJourneyViewModel);
}

<div class="measure nhsuk-core">
    @Html.HiddenFor(m => m.SessionId)

    <h1 class="nhsuk-heading-xl">
        You and the people you live with should not leave your home for any reason
    </h1>

    <div class="callout callout--warning callout--lite nhsuk-u-margin-bottom-6">
        <p>
            Your symptoms suggest that you could have a coronavirus infection. <br />
            You should get tested as soon as you can.
        </p>
    </div>

    <h2 class="nhsuk-heading-l">Managing symptoms at home</h2>

    <p>
        NHS.UK has information to help if you have symptoms. You can find out:
    </p>
    <ul>
        <li>
            <a href="https://www.nhs.uk/conditions/coronavirus-covid-19/what-to-do-if-you-or-someone-you-live-with-has-coronavirus-symptoms/staying-at-home-if-you-or-someone-you-live-with-has-coronavirus-symptoms/" data-event-trigger="click" data-event-value="NHS.UK coronavirus staying at home link">how long to isolate for</a> if you or someone you live with has symptoms
        </li>
        <li>
            <a href="https://www.nhs.uk/conditions/coronavirus-covid-19/what-to-do-if-you-or-someone-you-live-with-has-coronavirus-symptoms/how-to-treat-coronavirus-symptoms-at-home/" data-event-trigger="click" data-event-value="NHS.UK coronavirus managing symptoms at home link">how to manage your symptoms at home</a> and what to do if you feel worse
        </li>
    </ul>

    <div class="callout callout--attention nhsuk-u-margin-top-6 nhsuk-u-margin-bottom-6">
        <h2 class="nhsuk-heading-l">
            Apply for a coronavirus test
        </h2>

        <p>The test will show if you have the virus now.</p>

        <p>You can get the test by either:</p>

        <ul>
            <li>going to a drive-through testing centre if you have a car</li>
            <li>getting a home test kit sent to you</li>
        </ul>



        @Html.Partial("_ActionLink", new ActionLinkViewModel { Text = "Apply for a test on GOV.UK", Url = "https://www.gov.uk/apply-coronavirus-test", EventTrigger = "click", EventValue = "gov.uk coronavirus testing page", Target = "_blank" })
    </div>

    <h2 class="nhsuk-heading-m">
        Other things you can do on NHS.UK
    </h2>
    <p>
        You can also:
    </p>
    <ul>
        <li>
            <a href="https://111.nhs.uk/isolation-note" data-event-trigger="click" data-event-value="NHS.UK Isolation Note link" target="_blank">get an isolation note</a> (like a sick note) to give to your employer if you need time off work
        </li>
        <li>
            help the NHS plan its response to coronavirus by <a href="https://www.nhs.uk/coronavirus-status-checker" data-event-trigger="click" data-event-value="NHS.UK status checker link" target="_blank">telling us about your current experience of the virus</a>
        </li>
    </ul>

    <p>
        <a href="https://www.nhs.uk/conditions/coronavirus-covid-19/" data-event-trigger="click" data-event-value="NHS.UK coronavirus hub link">
            Go to NHS.UK for more coronavirus information and services
        </a>
    </p>
</div>