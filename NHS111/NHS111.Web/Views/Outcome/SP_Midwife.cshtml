@using NHS111.Models.Models.Domain
@using NHS111.Models.Models.Web
@using NHS111.Utils.DispositionLogics
@model OutcomeViewModel
@{
    Layout = "~/Views/Shared/_LayoutNhsUK.cshtml";

}
@section Title { Speak to a midwife }

<link href="~/Content/css_NhsUK/confirmation.css" media="all" rel="stylesheet" type="text/css" />
<link href="~/Content/css_NhsUK/signposting-outcome.css" media="all" rel="stylesheet" type="text/css" />
<link href="~/Content/css_NhsUK/signposting-outcome-print.css" media="print" rel="stylesheet" type="text/css" />

@section FeedbackSection {
    @Html.Partial("_FeedbackDetails", new FeedbackViewModel() { PageId = Model.Id })
}

@Html.Partial("_OutcomeHeader", Model)

<section>
    <div class="outcome-additional-info">
        <h3 class="outcome-additional-info-header">
            If you don't have a midwife, or can't get in contact with them, you can find who to contact below
        </h3>
    </div>
</section>

@Html.Partial("_FindService", Model, new ViewDataDictionary { { "Title", "If you don't have a midwife, or can't get in contact with them" }, { "ButtonText", "Find antenatal services" }, { "Label", "Antenatal services" } })

@Html.Partial("_CareAdvice", Model.CareAdvices, new ViewDataDictionary { { "Title", "What can I do in the meantime?" } })

@using (Html.BeginForm("Navigation", "Question", FormMethod.Post))
{
    @Html.Partial("_CommonHiddenFieldsOutcomeViewModel", Model)
    if (!Model.DisplayOutcomeReferenceOnly)
    {
        <div class="row">
            <input class="button-link-prev" type="submit" name="PreviousQuestion" value="Change my previous answer" />
        </div>
    }
}