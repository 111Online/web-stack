@using NHS111.Models.Models.Web
@model OutcomeViewModel
@{
    Layout = "~/Views/Shared/_LayoutNhsUk.cshtml";
    var error = Model.DosCheckCapacitySummaryResult.HasNoServices;
}

@section Title { NHS 111 - Speak to a clinician }
<link href="/Content/css_NhsUK/confirmation.css" media="all" rel="stylesheet" type="text/css">
<link href="~/content/css_NhsUk/disposition.css" media="screen" rel="stylesheet" type="text/css" />
<link href="~/Content/css_NhsUK/signposting-outcome.css" media="all" rel="stylesheet" type="text/css" />
<link href="~/Content/css_NhsUK/signposting-outcome-print.css" media="print" rel="stylesheet" type="text/css" />

@section HeadTop {
@{ var url = string.Format("/outcome/{0}/{1}/{2}/{3}/disposition/", Url.Encode(Model.PathwayNo), Url.Encode(Model.OutcomeGroup.Text), Url.Encode(Model.Id), Url.Encode(Model.QuestionNo)); }
    <script>
        var pageId = '@Model.Id';
        dataLayer = [
        {
            'virtualPageUrl': @url,
            'virtualPageTitle': '@Model.TitleWithoutBullets'
        }];
    </script>
}

@Html.Partial("_OutcomeHeader", new ViewDataDictionary() { { "OutcomeHeader", "Your answers suggest that you need a 111 clinician to call you" }})

@section FeedbackSection {
    @Html.Partial("_FeedbackDetails", new FeedbackViewModel() { PageId = Model.Id })
}

<div class="itk-message">
    <ul>
        <li>
            Search for a clinician in your area below.
        </li>
        <li>
            If you have not heard back within @Model.WaitTimeText, please call 111 and tell them you have used NHS 111 online.
        </li>
    </ul>
</div>

@{
    var dataDictionary = ViewContext.ViewData;
    dataDictionary.Add(new KeyValuePair<string, object>("Title", "Find a service that can help you"));
    dataDictionary.Add(new KeyValuePair<string, object>("ButtonText", "Find a healthcare service"));
    dataDictionary.Add(new KeyValuePair<string, object>("Label", "Healthcare services"));
    dataDictionary.Add(new KeyValuePair<string, object>("ITK", true));
}
@Html.Partial("_FindService", Model, dataDictionary)

@Html.Partial("_WorseningAdvice", Model)

@Html.Partial("_CareAdvice", Model.CareAdvices, new ViewDataDictionary { { "Title", "What can I do in the meantime?" } })

<hr />

<section>
    @using (Html.BeginForm("Navigation", "Question", FormMethod.Post))
    {
        @Html.Partial("_CommonHiddenFieldsOutcomeViewModel", Model)
        if (!Model.DisplayOutcomeReferenceOnly)
        {
            <div class="changeAnswers row">
                <input class="button button-next button-link" type="submit" name="PreviousQuestion" value="Change my previous answer" />
            </div>
        }
    }
</section>