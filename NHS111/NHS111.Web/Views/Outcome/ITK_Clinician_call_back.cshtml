@using NHS111.Models.Models.Web
@model OutcomeViewModel
@{
    Layout = "~/Views/Shared/_LayoutNhsUk.cshtml";
    var error = Model.DosCheckCapacitySummaryResult.HasNoServices;
}

@section Title { Speak to a clinician }
<link href="~/content/css_NhsUk/disposition.css" media="screen" rel="stylesheet" type="text/css" />
<link href="~/Content/css_NhsUK/signposting-outcome.css" media="all" rel="stylesheet" type="text/css" />
<link href="~/Content/css_NhsUK/signposting-outcome-print.css" media="print" rel="stylesheet" type="text/css" />

@section Scripts {
    <script>
        var pageId = '@Model.Id';
        dataLayer = [
        {
            'virtualPageUrl': document.location.pathname + '/' + pageId,
            'virtualPageTitle': '@Model.TitleWithoutBullets'
        }];
    </script>
}

@Html.Partial("_OutcomeHeader", new ViewDataDictionary() { { "OutcomeHeader", "Your answers suggest that you need a 111 clinician to call you" }})

@section FeedbackSection {
    @Html.Partial("_FeedbackDetails", new FeedbackViewModel() { PageId = Model.Id })
}

<div class="itk-message">
    <ul>
        <li>
            Search for a service below and a clinician will call you.
        </li>
        <li>
            If you have not heard back within @Model.WaitTimeText, please call 111 and tell them you have used the online tool.
        </li>
    </ul>
</div>

@Html.Partial("_FindService", Model, new ViewDataDictionary { { "Title", "Find a service that can help you" }, { "ButtonText", "Find a healthcare service" }, { "Label", "healthcare services" }, { "ITK", true } })

@Html.Partial("_WorseningAdvice", Model)

@Html.Partial("_CareAdvice", Model.CareAdvices)

<hr />

<section>
    @using (Html.BeginForm("Navigation", "Question", FormMethod.Post))
    {
        @Html.Partial("_CommonHiddenFieldsOutcomeViewModel", Model)
        if (!Model.DisplayOutcomeReferenceOnly)
        {
            <div class="row">
                <input class="button-link-prev" type="submit" name="PreviousQuestion" value="Change my previous answer" />
            </div>
        }
    }
</section>