@using NHS111.Models.Models.Domain
@using NHS111.Models.Models.Web
@inherits NHS111.Web.Views.Shared.SurveyLinkView<OutcomeViewModel>
@{
    ViewBag.Title = "See your GP";
    Layout = "~/Views/Shared/_LayoutNhsUK.cshtml";
}

@section Title { NHS 111 - More ways to get help }

@section HeadTop {
    @{ var url = string.Format("/outcome/{0}/{1}/{2}/disposition/", Url.Encode(Model.PathwayNo), Url.Encode(Model.OutcomeGroup.Text), Url.Encode(Model.Id)); }
    <script>
        var pageId = '@Model.Id';
        dataLayer = [
        {
            'virtualPageUrl': '@url',
            'virtualPageTitle': 'More ways to get help'
        }];
    </script>
}
@section SurveyBanner{
    @Html.Partial("_SurveyLink", Model.SurveyLink)
}
@section FeedbackSection {
    @if (!SurveyLinkFeature.IsEnabled)
    {
        @Html.Partial("_FeedbackDetails", new FeedbackViewModel() { UserId = Model.SessionId.ToString(), PageData = new PageDataViewModel(PageDataViewModel.PageType.Outcome, Model) })
    }
    else
    {
        @Html.Partial("_SurveyLink", Model.SurveyLink)
    }
}

<section class="measure nhsuk-core">
    <div class="callout callout--attention">
        <h1>More ways to get help</h1>
        
        @if (Model.OutcomeGroup.Equals(OutcomeGroup.GP))
        {
            <p>If you don't have a GP, see other things you can do.</p>
        }
        else if (Model.OutcomeGroup.Equals(OutcomeGroup.ItkPrimaryCare))
        {
            <p>If you're away from home and can't get an appointment with your GP, see other things you can do.</p>
            <p>Or you can <a href="https://www.nhs.uk/common-health-questions/nhs-services-and-treatments/how-do-i-register-as-a-temporary-resident-with-a-gp/">see any local GP on a temporary basis.</a></p>
        }
    </div>
        
    @if (Model.OutcomeGroup.Equals(OutcomeGroup.GP))
    {
        <details class="measure">
            <summary><span class="details__arrow" role="presentation"></span>How to register with a GP</summary>
            <div><p>Find out <a href="https://www.nhs.uk/using-the-nhs/nhs-services/gps/how-to-register-with-a-gp-practice/">how to register with a GP</a> if you don't already have one.</p></div>
        </details>
    }
    
    <hr role="presentation" />
    
    
    <details class="measure">
        <summary><span class="details__arrow" role="presentation"></span>What to do if you start to feel worse</summary>
        <div>
            <ol>
                <li>Call 111</li>
                <li>Tell them 111 online said you needed to get help @(!string.IsNullOrEmpty(Model.TimeFrameText) ? "within " + Model.TimeFrameText : "soon").</li>
                <li>Tell them your symptoms have got worse and you need to speak to a nurse.</li>
            </ol>
            <p>You might have to start the questions again, or answer new questions about any new symptoms.</p>
        </div>
    </details>

</section>