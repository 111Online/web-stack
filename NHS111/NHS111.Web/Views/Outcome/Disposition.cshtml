@model NHS111.Models.Models.Web.OutcomeViewModel
@{
    Layout = "~/Views/Shared/_LayoutOutcome.cshtml";
}
<div class="site" id="OutcomeOne">
    <div id="ProgressBar">
        <ul>
            <li class="firstChild"><span class="left">01 What's wrong </span> <img src="~/content/images/icons/breadcrumbOne.png" alt="" class="right"></li>
            <li class="secondChild"><span class="left">02 Tell us more </span><img src="~/content/images/icons/breadcrumbTwo.png" alt="" class="right"></li>
            <li class="lastChild"><span class="left">03 YOU ARE HERE . Next steps </span></li>
        </ul>
    </div>


    <div id="ContentWrapper">
        <div id="ProgressEnds">
            <div id="progressWrapper">
                <div class="meter nhsBlue">
                    <span class="p100"></span>
                </div>
                <span class="guideText">100% complete!</span>
            </div>
        </div>
        <div id="SubHeadWrapper">
            <section>
                <div class="headImage thirty">
                    <!--<img src="~/content/images/icons/outcomeHeader.png" alt="" class="left">-->
                    &nbsp;
                </div>
                <div class="headText seventy">
                    <h2>Thank you!</h2>

                    <h3>From your answers, we recommend you speak to a clinician about your @Html.Raw(Model.PathwayTitle.ToLower()).</h3>
                    <p class="outcomeMsg">A clinician can @Html.Raw(Model.Title.ToLower()).</p>

                </div>
            </section>
        </div>

        <div id="OutcomeQuestion">
            <img src="~/content/images/icons/blueArrow.png" class="arrowDown" alt="">
            <section>
                <h3>Would you like us to put you in touch with a suitable clinician?</h3>
                @using (Html.BeginForm("DispositionSelection", "Outcome", FormMethod.Post))
                {
                   @Html.Partial("_CommonHiddenFieldsOutcomeViewModel", Model)

                    <div class="row">
                        <input type="submit" class="button buttonLeft" name="PersonalDetails" id="Agree" value="Yes, please ">
                        <input type="submit" class="textLink" name="DispositionNo" id="DispositionNo" value="No, thank you.">
                    </div>



                }


                @using (Html.BeginForm("Navigation", "Question", FormMethod.Post)) //TODO I don't like this double form. Centalise hidden fields in a partial?
                {
                    @Html.Partial("_CommonHiddenFieldsOutcomeViewModel", Model)

                    <div class="row">
                        <input class="textLink" type="submit" name="PreviousQuestion" value="Change my answers." />
                    </div>

                }
            </section>
        </div>


    </div> <!--/ContentWrapper-->


    <div id="FooterWrapper">
        <footer>
            <!-- Copyright information -->

        </footer>
    </div>

</div> <!-- /site -->