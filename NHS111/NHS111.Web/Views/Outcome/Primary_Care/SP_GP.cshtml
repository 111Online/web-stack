@using NHS111.Models.Models.Web
@inherits NHS111.Web.Views.Shared.SurveyLinkView<OutcomeViewModel>
@{
    ViewBag.Title = "See your GP";
    Layout = "~/Views/Shared/_LayoutNhsUK.cshtml";
}

@section Title { NHS 111 - See your GP }

@section HeadTop {
    @{ var url = string.Format("/outcome/{0}/{1}/{2}/disposition/", Url.Encode(Model.PathwayNo), Url.Encode(Model.OutcomeGroup.Text), Url.Encode(Model.Id)); }
    <script>
        var pageId = '@Model.Id';
        dataLayer = [
        {
            'virtualPageUrl': '@url',
            'virtualPageTitle': '@Model.TitleWithoutBullets'
        }];
    </script>
}
@section FeedbackSection {
    @Html.Partial("_SurveyLink", Model.SurveyLink)
}

<section class="measure nhsuk-core">
    <div class="callout callout--attention">
        <h1 class="nhsuk-heading-l">@Model.OutcomeGroup.Text</h1>
    </div>

        <ul>
            <li>
            @using (Html.BeginForm("RegisterWithGp", "Outcome", FormMethod.Post)) {
                @Html.Partial("_CommonHiddenFieldsOutcomeViewModel", Model)
                @Html.Partial("_CommonHiddenFieldsCareAdviceViewModel", Model)
                <button class="button--link" id="register-with-gp" type="submit" value="RegisterWithGp" name="RegisterWithGp" formnovalidate>I'm away from home</button>
            }
            </li>
            <li>
            @using (Html.BeginForm("RegisterWithTempGp", "Outcome", FormMethod.Post)) {
                @Html.Partial("_CommonHiddenFieldsOutcomeViewModel", Model)
                @Html.Partial("_CommonHiddenFieldsCareAdviceViewModel", Model)
                <button class="button--link" id="register-with-temp-gp" type="submit" value="RegisterWithTempGp" name="RegisterWithTempGp" formnovalidate>I don't have a GP</button>
            }
            </li>
        </ul>

    <hr role="presentation" class="nhsuk-u-margin-top-6" />

    @Html.Partial("_rs_CareAdvice", Model.CareAdvices)
    @Html.Partial("_rs_WorseningAdvice", Model)

</section>




