@using NHS111.Models.Models.Web
@model OutcomeViewModel
@{
    ViewBag.Title = "See a Pharmacist";
    Layout = "~/Views/Shared/_LayoutNhsUK.cshtml";
}

@section Title { See a Pharmacist }
<link href="~/Content/css_NhsUK/confirmation.css" media="all" rel="stylesheet" type="text/css" />
<link href="~/Content/css_NhsUK/signposting-outcome.css" media="all" rel="stylesheet" type="text/css" />
<link href="~/Content/css_NhsUK/signposting-outcome-print.css" media="print" rel="stylesheet" type="text/css" />

@Html.Partial("_OutcomeHeader", Model)

@section FeedbackSection {
    @Html.Partial("_FeedbackDetails", new FeedbackViewModel() { PageId = Model.Id })
}

@Html.Partial("_FindService", Model, new ViewDataDictionary { { "Title", "Find a pharmacy" }, { "ButtonText", "Find a pharmacy" }, { "Label", "pharmacies" } })

<div class="outcome-additional-info">
    <h3 class="outcome-additional-info-header">Did you know?</h3>
    <p>In an emergency, some NHS pharmacies can supply prescription medicines outside normal opening hours.</p>
    <p>Find out more about:</p>
    <ul>
        <li><a href="http://www.nhs.uk/Livewell/Pharmacy/Pages/Medicinesoutofhours.aspx">Out-of-hours medicines</a></li>
        <li><a href="http://www.nhs.uk/NHSEngland/AboutNHSservices/pharmacists/Pages/pharmacistsandchemists.aspx">NHS pharmacies and the services they can offer</a></li>
    </ul>
    <p>By going to a pharmacist rather than your GP, you could save the NHS around £50.</p>
</div>
@Html.Partial("_WorseningAdvice", Model)

@Html.Partial("_CareAdvice", Model.CareAdvices, new ViewDataDictionary { { "Title", "What can I do in the meantime?" } })

<hr />

@using (Html.BeginForm("Navigation", "Question", FormMethod.Post))
{
    @Html.Partial("_CommonHiddenFieldsOutcomeViewModel", Model)
    if (!Model.DisplayOutcomeReferenceOnly)
    {
        <div class="changeAnswers row">
            <input class="button button-next button-link" type="submit" name="PreviousQuestion" value="Change my answers" />
        </div>
    }
}




