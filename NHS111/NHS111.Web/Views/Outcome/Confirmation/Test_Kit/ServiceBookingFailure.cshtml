@using NHS111.Models.Models.Web
@using NHS111.Web.Presentation.Analytics
@inherits NHS111.Web.Views.Shared.SurveyLinkView<NHS111.Models.Models.Web.ReferralFailureResultViewModel>
@{
    Layout = "~/Views/Shared/_LayoutNhsUk.cshtml";
    var tagPrinter = new AnalyticsTagPrinter();
}
@section Title {
    @Model.PageTitle
}
@section HeadTop {
    <script>
        @tagPrinter.Print(Model.AnalyticsDataLayer)
    </script>
}

@{
    var dataDictionary = ViewContext.ViewData;
    dataDictionary.Add(new KeyValuePair<string, object>("LaunchPage", "failure"));
}

<div class="measure nhsuk-core">
  <div class="callout callout--error">
    <h1 class="nhsuk-heading-l">
      There’s been a problem
    </h1>
    <p>
      Your details were not sent.
    </p>
    <p id="pe-container">
      Use the “back” button in your browser to go back to the previous page and try again.
    </p>
  </div>
</div>

<script type="text/javascript">
  var el = document.getElementById('pe-container');
  var a = document.createElement('a');
  var linkText = document.createTextNode("Go back and try again");
  a.appendChild(linkText);
  a.setAttribute('href', 'javascript:window.history.back();');
  el.textContent = '';
  el.appendChild(a);
</script>
