﻿@using System.Web.Mvc.Html
@using NHS111.Models.Models.Web
@inherits NHS111.Web.Views.Shared.SurveyLinkView<ReferralConfirmationResultViewModel>
@{
    Layout = "~/Views/Shared/_LayoutNhsUk.cshtml";
}
@section Title {
    You're signed up
}

<div class="measure nhsuk-core">

    <h1 class="nhsuk-heading-xl">
        You're signed up
    </h1>

    <div class="callout callout--info callout--lite nhsuk-u-margin-top-0 nhsuk-u-margin-bottom-6">
        <p>
            The text messaging service is for advice only. If you feel unable to
            cope with your symptoms, use 111 online again.
        </p>
    </div>
    <p>
        You can opt out of text messaging at any time by replying 'STOP'
    </p>
    <p>
        Your data will only be shared within the NHS. You can read more about
        how we use your data in our <a href="https://digital.nhs.uk/coronavirus/coronavirus-covid-19-response-information-governance-hub">privacy policy.</a>
    </p>
</div>