@using NHS111.Models.Models.Web
@inherits NHS111.Web.Views.Shared.SurveyLinkView<PersonalDetailViewModel>
@{
    Layout = "~/Views/Shared/_LayoutNhsUk.cshtml";
}

@section Title {
    Select Appointment
}

@section HeadTop {
    @{ var url = string.Format("/outcome/{0}/{1}/{2}/itk/personaldetails/currentaddress/{3}/{4}", Url.Encode(Model.PathwayNo), Url.Encode(Model.OutcomeGroup.Text), Url.Encode(Model.Id), Url.Encode(Model.SelectedServiceId), Url.Encode(Model.SelectedService.Name)); }
    <script>
        var pageId = '@Model.Id';
        dataLayer = [
            {
                'virtualPageUrl': '@url',
                'virtualPageTitle': 'Book online consultation - Select Appointment'
            }];
    </script>
}

@{
    var dataDictionary = ViewContext.ViewData;
    dataDictionary.Add(new KeyValuePair<string, object>("LaunchPage", "current-address"));
}

@section FeedbackSection {
    @Html.Partial("_FeedbackDetails", new FeedbackViewModel() { UserId = Model.SessionId.ToString(), PageData = new PageDataViewModel(PageDataViewModel.PageType.PersonalDetailsCurrentAddress, Model) })
}

@using (Html.BeginForm("PersonalDetails", "PersonalDetails", FormMethod.Post))
{
    @Html.Partial("_CommonHiddenFieldsOutcomeViewModel", Model)
    @Html.Partial("_CommonHiddenFieldsCareAdviceViewModel", Model)
    @Html.Hidden("SelectedServiceId", Model.SelectedServiceId)

    <div class="nhsuk-core">
        <h1 id="strap-line" class="nhsuk-heading-l">Choose an appointment</h1>

        
        <ul class="address-picker">
            @for (int i = 0; i < Model.Slots.Count(); i++)
            {
                var slot = Model.Slots[i];
                @Html.Hidden("SelectedServiceId", Model.SelectedServiceId)
                @Html.Hidden(string.Format("Slots[{0}].Id", i), slot.Id)
                @Html.Hidden(string.Format("Slots[{0}].Start", i), slot.Start)
                @Html.Hidden(string.Format("Slots[{0}].End", i), slot.End)
                @Html.Hidden(string.Format("Slots[{0}].ScheduleId", i), slot.ScheduleId)
                @Html.Hidden(string.Format("Slots[{0}].PractitionerId", i), slot.PractitionerId)
                <li class="address-option"><button type="submit" name="slotId" id="@slot.Id" value="@slot.Id" class="button--link">Start: @slot.Start<br/>End: @slot.End</button></li>
            }
        </ul>
        <hr />
    </div>
}
