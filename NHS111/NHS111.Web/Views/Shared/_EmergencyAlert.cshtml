@model NHS111.Models.Models.Web.EmergencyAlertViewModel
<style>
    .global-header {
        border: 0;
    }
</style>

<div class="nhsuk-core">
    <div class="nhsuk-global-alert" id="nhsuk-global-alert">
        <div class="nhsuk-width-container">
            <div class="nhsuk-grid-row">
                <div class="nhsuk-grid-column-full">
                    <div class="nhsuk-global-alert__content">
                        <p>
                            <strong>
                                Worried about the coronavirus (COVID-19) outbreak?
                                <br />
                                <a href="@string.Format("/PWCorona/{0}/COVID-19/about", Model.SessionId)" data-event-triger="click" data-event-value="Novel Coronavirus about">Get information and advice</a>
                            </strong>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
