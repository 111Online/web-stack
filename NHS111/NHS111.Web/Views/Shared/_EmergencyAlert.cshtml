@model NHS111.Models.Models.Web.EmergencyAlertViewModel

@if (!Model.OverrideDisplay)
{
    <style>
        .global-header {
            border: 0;
        }
    </style>

    <div class="nhsuk-core">
        <div class="nhsuk-global-alert" id="nhsuk-global-alert">
            <div class="nhsuk-width-container">
                <div class="nhsuk-grid-row">
                    <div class="nhsuk-grid-column-full">
                        <div class="nhsuk-global-alert__content">
                            <p>
                            Coronavirus (COVID-19)
                            </p>
                            <p>
                                <b>Do not go to a GP, pharmacy or hospital.</b><br>
                                <a href="/service/COVID-19/" data-event-triger="click" data-event-value="Novel Coronavirus about">
                                    Find out what to do if you think you have symptoms
                                </a>
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}
