@using System.Web.Configuration
@model NHS111.Models.Models.Web.RecommendedServiceViewModel
@if (Model != null)
{
    @Html.HiddenFor(x => Model.Id)
    @Html.HiddenFor(x => Model.Details.Text)
    @Html.HiddenFor(x => Model.Details.Summary)
    @Html.HiddenFor(x => Model.ReasonText)
    @Html.Hidden("Name", @WebUtility.HtmlDecode(Model.Name))
    @Html.Hidden("ServiceTypeAlias", @WebUtility.HtmlDecode(Model.ServiceTypeAlias))
    @Html.Hidden("ServiceTypeDescription", @WebUtility.HtmlDecode(Model.ServiceTypeDescription))
    @Html.Hidden("PublicName", @WebUtility.HtmlDecode(Model.PublicName))
    @Html.HiddenFor(x => Model.ContactDetails)
    @Html.Hidden("Address", @WebUtility.HtmlDecode(Model.Address))
    @Html.HiddenFor(x => Model.Distance)
    @Html.HiddenFor(m => Model.OdsCode)
    @Html.HiddenFor(m => Model.PostCode)
    @Html.HiddenFor(m => Model.OpenAllHours)
    @Html.HiddenFor(m => Model.OnlineDOSServiceType.Id)

    if (Model.RotaSessions != null)
    {
        for (var j = 0; j < Model.RotaSessions.Length; j++)
        {
            @Html.HiddenFor(m => m.RotaSessions[j].StartDayOfWeek)
            @Html.HiddenFor(m => m.RotaSessions[j].StartTime.Hours)
            @Html.HiddenFor(m => m.RotaSessions[j].StartTime.Minutes)
            @Html.HiddenFor(m => m.RotaSessions[j].EndDayOfWeek)
            @Html.HiddenFor(m => m.RotaSessions[j].EndTime.Hours)
            @Html.HiddenFor(m => m.RotaSessions[j].EndTime.Minutes)
        }
    }
    if (Model.OpenTimeSpecifiedSessions != null)
    {
        for (var j = 0; j < Model.OpenTimeSpecifiedSessions.Length; j++)
        {
            @Html.HiddenFor(m => m.OpenTimeSpecifiedSessions[j])
        }
    }
}