@model NHS111.Models.Models.Web.Elements.HiddenTextViewModel
@* Use Shared/_LinkSummary instead of this going forward *@

<details>
    <summary role="button">
        <span class="details__arrow"></span>
        <span class="summary">@Html.Raw(Model.Summary)</span>
    </summary>
    <div class="panel panel-border-narrow">
        @foreach (var detail in @Model.Details)
        {
            <p>
                @Html.Raw(detail)
            </p>
        }
    </div>
</details>
