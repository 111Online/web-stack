@model  IEnumerable<NHS111.Models.Models.Domain.CareAdvice>
@if (Model.Any())
{
    <div class="content-seperator content-seperator--equalvertspacing--large"></div>
    <div class="measure">
        <h2>Care advice</h2>
        <div class="care-advice-output">
            @foreach (var careAdvice in Model)
            {
                if (careAdvice.Items != null && careAdvice.Items.Any())
                {
                    <details>
                        <summary id="Advice_@careAdvice.Id">@careAdvice.Keyword</summary>
                        <div>
                            <ul>
                                @foreach (var parent in careAdvice.Items)
                                {
                                    <li>
                                        @parent.Text
                                        @if (parent.Items != null && parent.Items.Any())
                                        {
                                            <ul>
                                                @foreach (var child in parent.Items)
                                                {
                                                    <li>@child.Text</li>
                                                }
                                            </ul>
                                        }
                                    </li>

                                }
                            </ul>
                        </div>
                        @Html.Hidden(careAdvice.Id)
                    </details>
                }
            }
        </div>
    </div>
}
