@using NHS111.Models.Models.Web
@inherits NHS111.Web.Views.Shared.SurveyLinkView<OutcomeViewModel>
@{
    ViewBag.Title = "ITK_Primary_care";
    Layout = "~/Views/Shared/_LayoutNhsUK.cshtml";
}
@section HeadTop {
    @{ var url = string.Format("/outcome/{0}/{1}/{2}/services/", Url.Encode(Model.PathwayNo), Url.Encode(Model.OutcomeGroup.Text), Url.Encode(Model.Id)); }
    <script>
        var pageId = '@Model.Id';
        dataLayer = [
        {
            'virtualPageUrl': '@url',
            'virtualPageTitle': '@Model.TitleWithoutBullets'
        }];
    </script>
}

@section Title { NHS 111 - Contact a healthcare service }
<link href="~/Content/css_NhsUK/confirmation.css" media="all" rel="stylesheet" type="text/css" />
<link href="~/content/css_NhsUk/disposition.css" media="screen" rel="stylesheet" type="text/css" />
<link href="~/Content/css_NhsUK/signposting-outcome.css" media="all" rel="stylesheet" type="text/css" />

@section SurveyBanner{
    @Html.Partial("_SurveyLink", Model.SurveyLink)
}

@section FeedbackSection {
    @if (!SurveyLinkFeature.IsEnabled)
    {
        @Html.Partial("_FeedbackDetails", new FeedbackViewModel() { PageId = Model.Id });
    }
}

@{
    var services = Model.DosCheckCapacitySummaryResult.Success.Services;
    var recommendedService = services.First();
}
@if (recommendedService.CallbackEnabled)
{
    <section>
        <div class="outcome-header">
            <h2 class="heading-large">Get an out of hours service to call you</h2>
            <p>They will check through the anwers you have entered and give you advice on what to do next</p>
        </div>
    </section>
    var callbackService = services.First(s => s.CallbackEnabled);
    using (Html.BeginForm("PersonalDetails", "Outcome", FormMethod.Post))
    {
        @Html.Partial("_CommonHiddenFieldsOutcomeViewModel", Model)
        @Html.Partial("_CommonHiddenFieldsCareAdviceViewModel", Model)
        @Html.Hidden("SelectedServiceId", @callbackService.Id)
        <div class="service-call">
            <input class="alternative-care-button-link" type="submit" name="PersonalDetails" value="Book a call" />
        </div>
    }
}
else
{
    <section>
        <div class="outcome-header">
            <h2 class="heading-large">We recommend you visit the following service</h2>
            <h3 class="service-title">@WebUtility.HtmlDecode(recommendedService.Name)</h3>
            <p>@WebUtility.HtmlDecode(recommendedService.Address)</p>
            <p>@WebUtility.HtmlDecode(recommendedService.CurrentStatus)</p>
            <p>You don't need to call this service, you can go there during the times shown above.</p>
        </div>
    </section>
    using (Html.BeginForm("GetDirections", "Outcome", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.SessionId)
        @Html.HiddenFor(m => m.JourneyId)
        @Html.HiddenFor(m => m.JourneyJson)
        @Html.HiddenFor(m => m.Id)
        @Html.Hidden("SelectedServiceId", @recommendedService.Id)
        @Html.Hidden("SelectedServiceName", @recommendedService.Name)
        @Html.Hidden("SelectedServiceAddress", @recommendedService.Address)
        <div class="service-call">
            <input class="alternative-care-button-link" type="submit" value="Get directions" />
        </div>
    }
}

<hr class="alternative-care-hr" />

@Html.Partial("_AlternativeServices", Model, new ViewDataDictionary { { "Title", "Other services you can visit now" } })

<hr class="alternative-care-hr" />

@Html.Partial("_CareAdvice", Model.CareAdvices, new ViewDataDictionary { { "Title", "What you can do in the meantime" }, { "NoHR", true } })

@Html.Partial("_WorseningAdvice", Model, new ViewDataDictionary() { { "WorseningAdviceClass", "blue" } })