@using NHS111.Utils.DispositionLogics
@model NHS111.Models.Models.Web.DosViewModel
@{
    Layout = "~/Views/Shared/_LayoutOutcome.cshtml";
}
<script>
    $(function () {
        $("#HospitalsList").accordion();
    });
</script>
<div class="site" id="SelectSurgery">
    <div id="ProgressBar">
        <ul>
            <li class="firstChild"><span class="left">01 What's wrong </span> <img src="../../content/images/icons/breadcrumbOne.png" alt="" class="right"></li>
            <li class="secondChild"><span class="left">02 Tell us more </span><img src="../../content/images/icons/breadcrumbTwo.png" alt="" class="right"></li>
            <li class="lastChild"><span class="left">03 YOU ARE HERE . Next steps </span></li>
        </ul>
    </div>
    <div id="ContentWrapper">
        @using (Html.BeginForm("FillServiceDetails", "DOS", FormMethod.Post))
        {
            @Html.HiddenFor(x => Model.Id)
            @Html.HiddenFor(x => Model.Title)
            @Html.HiddenFor(x => Model.JourneyJson)
            @Html.HiddenFor(x => Model.PathwayNo)
            @Html.HiddenFor(x => Model.SymptomGroup)
            @Html.HiddenFor(x => Model.Age)
            @Html.HiddenFor(x => Model.Gender)
            @Html.HiddenFor(x => Model.PostCode)
            @Html.HiddenFor(x => Model.SymptomDiscriminator)
            @Html.HiddenFor(x => Model.SelectedSurgery)
            @Html.HiddenFor(x => Model.CheckCapacitySummaryResultListJson)
            @Html.HiddenFor(x => Model.UserId)


            <div id="SubHeadWrapper">
                <section>
                    @if (Grouping.Two.Contains(Model.Id))
                    {
                        <h2>Emergency treatment centres nearest to you</h2>
                        <p>Select a service</p>
                    }
                    else
                    {
                        <h2>Select a healthcare provider</h2>
                        <p>This will send your details to the provider and they will @Html.Raw(Model.Title.ToLower()).</p>
                    }
                </section>
            </div>
            <div id="FormSearchGP">
                <img src="../../content/images/icons/blueArrow.png" class="arrowDown" alt="">
                <section>
                    <div id="FormWrapper">
                        <div class="row">
                            @Html.Partial("_SurgeryDetails", Model)
                        </div>
                        <!--/row-->
                    </div>
                    <!--/FormWrapper-->

                </section>
            </div>
            <!--/AboutYou-->
        }
    </div>
    <!--/ContentWrapper-->
    <div id="FooterWrapper">
        <footer>
            <!-- Copyright information -->
        </footer>
    </div>
</div>